@model List<User>
@{
    ViewData["Title"] = "Index";
}

<div class="card shadow border-0 p-0 mb-5">
    <div class="card-header  bg-secondary bg-gradient  ">
        <div class="text-center text-dark">
            <h2>Create New User</h2>
        </div>
    </div>

    <div class=" row border-1 card-body p-4">
        @*  <form method="post" enctype="multipart/form-data">

        <div class="row form-floating py-2 col-12">
        <input type="file" name="file" class="form-control border-0 shadow" />
        <label asp-for="" class="ms-2"></label>
        </div>

        </form> *@

        <table class="table table-striped table-hover">
            
            <div class="row">
                <div class="col-auto  p-1">
                    <a asp-controller="User" asp-action="Create" class="btn btn-success">
                        <i class="bi bi-plus-circle"> Create New User </i>
                    </a>
                </div>
            </div>
            <thead class="bg-secondary">
            <tr>
                <th scope="col">#</th>
                <th scope="col">Name</th>
                <th scope="col"></th>
                <th scope="col"></th>
            </tr>
            </thead>

            <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <th scope="row">@item.Id</th>
                    <td class="w-50">@item.Name</td>
                    <td >
                        <div class="  btn-group  " role="group">
                            <a asp-controller="User" asp-action="Index" asp-route-id="@item.Id" class="btn btn-primary mx-2">
                                <i class="bi bi-pencil-square">Edit</i>
                            </a>
                        </div>
                    </td>
                    <td >
                        <div class="  btn-group  " role="group ">
                            <a asp-controller="User" asp-action="Index" asp-route-id="@item.Id" class="btn btn-danger mx-2">
                                <i class="bi bi-trash-fill">Delete</i>
                            </a>
                        </div>
                    </td>
                </tr>
            }

            </tbody>
        </table>
    </div>

</div>

